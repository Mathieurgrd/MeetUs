

    <RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="#ffffff"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto">



        <EditText
            android:id="@+id/editTextTechno"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_above="@+id/editTextWild"
            android:layout_alignLeft="@+id/editTextWild"
            android:layout_alignStart="@+id/editTextWild"
            android:background="@drawable/text_d"
            android:ems="10"
            android:gravity="center_vertical|center"
            android:hint="Techno (Java, PHP, C/C++ ...)"
            android:inputType="textPersonName" />


        <EditText
            android:id="@+id/editTextAge"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_above="@+id/editTextTechno"
            android:layout_alignLeft="@+id/editTextTechno"
            android:layout_alignStart="@+id/editTextTechno"
            android:background="@drawable/text_d"
            android:ems="10"
            android:gravity="center_vertical|center"
            android:hint="Age"
            android:inputType="textPersonName" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/PhotoProfil"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:src="@drawable/imgmarineprofil"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp"
            android:layout_below="@+id/polnaref"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="15dp" />

        <TextView
            android:id="@+id/polnaref"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <EditText
            android:id="@+id/editTextVille"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_above="@+id/buttonProfil"
            android:layout_alignLeft="@+id/editTextWild"
            android:layout_alignStart="@+id/editTextWild"
            android:layout_marginBottom="15dp"
            android:background="@drawable/text_d"
            android:ems="10"
            android:gravity="center_vertical|center"
            android:hint="Ville"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextWild"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_above="@+id/editTextVille"
            android:layout_centerHorizontal="true"
            android:background="@drawable/text_d"
            android:ems="10"
            android:gravity="center_vertical|center"
            android:hint="Côté Wild"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextName"
            android:layout_width="wrap_content"
            android:layout_height="70dp"
            android:layout_above="@+id/editTextAge"
            android:layout_alignLeft="@+id/editTextAge"
            android:layout_alignStart="@+id/editTextAge"
            android:background="@drawable/text_d"
            android:ems="10"
            android:gravity="center_vertical|center_horizontal"
            android:hint="Name"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/buttonProfil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="27dp"
            android:background="@drawable/start"
            android:hint="Edit my profil"
            android:textColorHint="#FFFFFF" />


        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/SignOutButton"
            android:layout_width="61dp"
            android:layout_height="55dp"
            android:src="@drawable/logoutrounded"
            app:civ_border_color="#FF000000"
            app:civ_border_width="1dp"
            android:layout_below="@+id/polnaref"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />

    </RelativeLayout>
