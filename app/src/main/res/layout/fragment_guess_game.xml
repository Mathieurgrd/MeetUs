<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.mathieu.meetus.GuessGame">

    <RelativeLayout
        android:id="@+id/activity_guess"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="fr.wcs.meetus.Guess">

        <EditText
            android:id="@+id/editTextWild"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editTextAge"
            android:layout_alignLeft="@+id/tvFragGuess"
            android:layout_alignStart="@+id/tvFragGuess"
            android:layout_marginBottom="23dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextVille"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editTextWild"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="20dp"
            android:ems="10"
            android:inputType="text" />

        <EditText
            android:id="@+id/editTextAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/GuessAnswer"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="23dp"
            android:ems="10"
            android:inputType="text|number" />

        <EditText
            android:id="@+id/GuessAnswer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:background="@drawable/barreguess"
            android:ems="10"
            android:gravity="center"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/editTextSpé"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@+id/editTextVille"
            android:layout_alignParentEnd="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="23dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/buttonTry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/play"
            android:text="@string/trybutton"
            android:textColor="#FEFEFE"
            android:textSize="18dp"
            android:layout_alignBaseline="@+id/GuessAnswer"
            android:layout_alignBottom="@+id/GuessAnswer"
            android:layout_alignLeft="@+id/GuessAnswer"
            android:layout_alignStart="@+id/GuessAnswer" />


        <TextView
            android:id="@+id/tvFragGuess"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/editTextSpé"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/editTextSpé"
            android:layout_marginTop="16dp"
            android:text="@string/guess"
            android:textSize="20dp"
            android:textStyle="bold" />

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/PhotoProfil"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_alignEnd="@+id/editTextVille"
            android:layout_alignRight="@+id/editTextVille"
            android:layout_below="@+id/tvFragGuess"
            android:layout_marginTop="39dp"
            android:src="@drawable/imgmarineprofil"
            app:civ_border_color="#FF000000"
            app:civ_border_width="2dp" />

    </RelativeLayout>

</FrameLayout>
